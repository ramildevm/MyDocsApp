<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->

        <!-- your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="colorPrimaryDark" >@color/primary</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:checkBoxPreferenceStyle">@style/AppCheckBoxStyle</item>
    </style>
    <style name="AppCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/yellow</item>
    </style>
    <color name="primary">#757575</color>
</resources>