<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="3dp" android:color="#2c2c2c" />
            <corners android:radius="10000dp" />
            <solid android:color="#cc757575" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="3dp" android:color="#552c2c2c" />
            <corners android:radius="10000dp" />
            <solid android:color="#ff757575" />
        </shape>
    </item>
</selector>