<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainContentActivity"
    android:id="@+id/motion_layout"
    android:background="#000"
    app:layoutDescription="@xml/activity_main_content_scene">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:alpha="0"
    android:id="@+id/checkTranitionState"
    app:layout_constraintBottom_toTopOf="parent"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/content_panel"
        android:layout_width="match_parent"
        android:paddingTop="60dp"
        android:layout_height="fill_parent"
        android:background="#2C2C2C"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_panel">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2C2C2C"
            android:orientation="horizontal"/>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/makeFolderPanel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"
        android:layout_marginTop="280dp">
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/folderNameTxt"
            android:hint="Введите название"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:background="@drawable/rounded_border_yellow"
            android:paddingStart="10dp"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:onClick="makeFolderClick"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="Создать папку"/>
        <Button
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:background="@drawable/rounded_border_white"
            android:paddingStart="10dp"
            android:onClick="cancelMakeFolderClick"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="Отмена"/>


    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_panel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#757575"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/menubar_main_list"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="11dp"
            android:src="@drawable/bulleted_list"
            android:onClick="goAccountClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/login_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/login_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FFC700"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/menubar_options"
            app:layout_constraintStart_toEndOf="@+id/menubar_main_list"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="200dp" />

        <ImageView
            android:id="@+id/menubar_options"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="7dp"
            android:tag="off"
            android:onClick="openSortMenuClick"
            android:src="@drawable/slider_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/login_txt"
            app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/sort_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/top_panel"
        app:layout_constraintStart_toEndOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Сортировать"/>
        <Button
            android:id="@+id/flow_sort_doc_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:onClick="sortDocClick"
            android:background="@drawable/flow_doc_btn"/>
        <Button
            android:id="@+id/flow_sort_image_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:onClick="sortImageClick"
            android:background="@drawable/flow_image_btn"/>
        <Button
            android:id="@+id/flow_sort_card_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:onClick="sortCardClick"
            android:background="@drawable/flow_card_btn"/>
        <Button
            android:id="@+id/flow_sort_folder_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:onClick="sortFolderClick"
            android:background="@drawable/flow_folder_btn"/>
        <Button
            android:id="@+id/flow_sort_cancel_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:onClick="sortCancelClick"
            android:background="@drawable/ic_baseline_cancel_24"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/top_shadow"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/gradient_black_to_transparent"
        app:layout_constraintTop_toBottomOf="@id/top_panel"
        android:orientation="vertical"/>
    <Button
        android:id="@+id/flow_doc_add_btn"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:onClick="goPatternClick"
        app:layout_constraintEnd_toEndOf="@id/flow_button"
        app:layout_constraintBottom_toBottomOf="@id/flow_button"
        app:layout_constraintStart_toStartOf="@id/flow_button"
        app:layout_constraintTop_toTopOf="@id/flow_button"
        android:background="@drawable/flow_doc_btn"/>
    <Button
        android:id="@+id/flow_add_image_btn"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintEnd_toEndOf="@id/flow_button"
        app:layout_constraintBottom_toBottomOf="@id/flow_button"
        app:layout_constraintStart_toStartOf="@id/flow_button"
        app:layout_constraintTop_toTopOf="@id/flow_button"
        android:background="@drawable/flow_image_btn"/>
    <Button
        android:id="@+id/flow_add_card_btn"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintEnd_toEndOf="@id/flow_button"
        app:layout_constraintBottom_toBottomOf="@id/flow_button"
        app:layout_constraintStart_toStartOf="@id/flow_button"
        app:layout_constraintTop_toTopOf="@id/flow_button"
        android:background="@drawable/flow_card_btn"/>
    <Button
        android:id="@+id/flow_add_folder_btn"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:onClick="menuMakeFolderClick"
        app:layout_constraintEnd_toEndOf="@id/flow_button"
        app:layout_constraintBottom_toBottomOf="@id/flow_button"
        app:layout_constraintStart_toStartOf="@id/flow_button"
        app:layout_constraintTop_toTopOf="@id/flow_button"
        android:background="@drawable/flow_folder_btn"/>

    <Button
        android:id="@+id/flow_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:tag="off"
        android:background="@drawable/add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.motion.widget.MotionLayout>