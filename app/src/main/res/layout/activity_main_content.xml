<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainContentActivity"
    android:id="@+id/motion_layout"
    android:background="#000"
    app:layoutDescription="@xml/activity_main_content_scene">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:alpha="0"
    android:id="@+id/checkTranitionState"
    app:layout_constraintBottom_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:background="#2C2C2C"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/bottom_panel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_panel" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_panel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#757575"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/menubar_main_list"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="11dp"
            android:src="@drawable/bulleted_list"
            android:onClick="goAccountClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/login_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/login_txt"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FFC700"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/menubar_options"
            app:layout_constraintStart_toEndOf="@+id/menubar_main_list"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="200dp" />

        <ImageView
            android:id="@+id/menubar_options"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="7dp"
            android:tag="off"
            android:onClick="openSortMenuClick"
            android:src="@drawable/slider_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/login_txt"
            app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_select_panel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#757575"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/top_select_go_back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="11dp"
            android:onClick="topSelectBackClick"
            android:rotation="180"
            android:src="@drawable/ic_baseline_arrow_right_alt_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/top_select_picked_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/top_select_picked_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FFC700"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/top_select_all_btn"
            app:layout_constraintStart_toEndOf="@+id/top_select_go_back_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="200dp" />

        <ImageView
            android:id="@+id/top_select_all_btn"
            android:layout_width="50dp"
            android:layout_height="37dp"
            android:layout_margin="7dp"
            android:onClick="topSelectAllClick"
            android:src="@drawable/ic_baseline_library_add_check_24"
            android:tag="off"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/top_select_picked_txt"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/sort_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/top_panel"
        app:layout_constraintStart_toEndOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="@string/sort_by_string"/>
        <Button
            android:id="@+id/flow_sort_doc_btn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:onClick="sortDocClick"
            android:background="@drawable/flow_doc_btn"/>
        <Button
            android:id="@+id/flow_sort_image_btn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:onClick="sortImageClick"
            android:background="@drawable/flow_image_btn"/>
        <Button
            android:id="@+id/flow_sort_card_btn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:onClick="sortCardClick"
            android:background="@drawable/flow_card_btn"/>
        <Button
            android:id="@+id/flow_sort_folder_btn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:onClick="sortFolderClick"
            android:background="@drawable/flow_folder_btn"/>
        <Button
            android:id="@+id/flow_sort_cancel_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_cancel"
            android:layout_gravity="center"
            android:onClick="sortCancelClick"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/top_shadow"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/gradient_black_to_transparent"
        app:layout_constraintTop_toBottomOf="@id/top_panel"
        android:orientation="vertical"/>
    <Button
        android:id="@+id/flow_doc_add_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:onClick="goPatternClick"
        app:layout_constraintEnd_toEndOf="@id/flow_button"
        app:layout_constraintBottom_toBottomOf="@id/flow_button"
        app:layout_constraintStart_toStartOf="@id/flow_button"
        app:layout_constraintTop_toTopOf="@id/flow_button"
        android:background="@drawable/flow_doc_btn"/>
    <TextView
        android:alpha="0"
        android:layout_marginRight="-2dp"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:shadowDy="4"
        android:shadowDx="4"
        android:shadowRadius="9"
        android:padding="5dp"
        android:id="@+id/document_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationY="-216dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="@string/document_string"
        app:layout_constraintBottom_toBottomOf="@id/flow_button"
        app:layout_constraintTop_toTopOf="@id/flow_button"
        app:layout_constraintEnd_toStartOf="@id/flow_button"
        />
    <Button
        android:id="@+id/flow_add_image_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="@id/flow_button"
        app:layout_constraintBottom_toBottomOf="@id/flow_button"
        app:layout_constraintStart_toStartOf="@id/flow_button"
        app:layout_constraintTop_toTopOf="@id/flow_button"
        android:background="@drawable/flow_image_btn"/>
    <TextView
        android:alpha="0"
        android:layout_marginRight="-2dp"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:shadowDy="4"
        android:shadowDx="4"
        android:shadowRadius="9"
        android:padding="5dp"
        android:id="@+id/image_txt"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationY="-164dp"
        android:textSize="16dp"
        android:text="@string/image_string"
        app:layout_constraintBottom_toBottomOf="@id/flow_button"
        app:layout_constraintTop_toTopOf="@id/flow_button"
        app:layout_constraintEnd_toStartOf="@id/flow_button"
        />
    <Button
        android:id="@+id/flow_add_card_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="@id/flow_button"
        app:layout_constraintBottom_toBottomOf="@id/flow_button"
        app:layout_constraintStart_toStartOf="@id/flow_button"
        app:layout_constraintTop_toTopOf="@id/flow_button"
        android:background="@drawable/flow_card_btn"/>
    <TextView
        android:alpha="0"
        android:layout_marginRight="-2dp"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:shadowDy="4"
        android:shadowDx="4"
        android:shadowRadius="9"
        android:padding="5dp"
        android:id="@+id/card_txt"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationY="-112dp"
        android:textSize="16dp"
        android:text="@string/card_string"
        app:layout_constraintBottom_toBottomOf="@id/flow_button"
        app:layout_constraintTop_toTopOf="@id/flow_button"
        app:layout_constraintEnd_toStartOf="@id/flow_button"
        />
    <Button
        android:id="@+id/flow_add_folder_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:onClick="menuMakeFolderClick"
        app:layout_constraintEnd_toEndOf="@id/flow_button"
        app:layout_constraintBottom_toBottomOf="@id/flow_button"
        app:layout_constraintStart_toStartOf="@id/flow_button"
        app:layout_constraintTop_toTopOf="@id/flow_button"
        android:background="@drawable/flow_folder_btn"/>
    <TextView
        android:alpha="0"
        android:layout_marginRight="-2dp"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:shadowDy="4"
        android:shadowDx="4"
        android:shadowRadius="9"
        android:padding="5dp"
        android:id="@+id/folder_txt"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_height="wrap_content"
        android:translationY="-60dp"
        android:text="@string/folder_string"
        app:layout_constraintBottom_toBottomOf="@id/flow_button"
        app:layout_constraintTop_toTopOf="@id/flow_button"
        app:layout_constraintEnd_toStartOf="@id/flow_button"
        />
    <Button
        android:id="@+id/flow_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/ic_add_btn"
        android:elevation="7dp"
        android:translationZ="5dp"
        android:tag="off"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_panel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#757575"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <ImageView
            android:id="@+id/bottom_pin_btn"
            android:layout_width="50dp"
            android:layout_height="37dp"
            android:onClick="bottomPinClick"
            android:src="@drawable/bottom_pin_btn"
            app:layout_constraintBottom_toTopOf="@id/bottom_pin_txt"
            app:layout_constraintEnd_toStartOf="@id/bottom_hide_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/bottom_pin_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="bottomPinClick"
            android:text="@string/pin_string"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/bottom_pin_btn"
            app:layout_constraintStart_toStartOf="@+id/bottom_pin_btn"
            app:layout_constraintTop_toBottomOf="@+id/bottom_pin_btn" />

        <ImageView
            android:id="@+id/bottom_hide_btn"
            android:layout_width="50dp"
            android:layout_height="37dp"
            android:onClick="bottomHideClick"
            android:src="@drawable/bottom_hide_btn"
            app:layout_constraintBottom_toTopOf="@id/bottom_hide_txt"
            app:layout_constraintEnd_toStartOf="@id/bottom_delete_btn"
            app:layout_constraintStart_toEndOf="@id/bottom_pin_btn"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/bottom_hide_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hide_string"
            android:textStyle="bold"
            android:onClick="bottomHideClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/bottom_hide_btn"
            app:layout_constraintStart_toStartOf="@+id/bottom_hide_btn"
            app:layout_constraintTop_toBottomOf="@+id/bottom_hide_btn" />

        <ImageView
            android:id="@+id/bottom_delete_btn"
            android:layout_width="50dp"
            android:layout_height="37dp"
            android:onClick="bottomDeleteClick"
            android:src="@drawable/bottom_delete_btn"
            app:layout_constraintBottom_toTopOf="@id/bottom_delete_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/bottom_hide_btn"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/bottom_delete_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_string"
            android:textStyle="bold"
            android:onClick="bottomDeleteClick"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/bottom_delete_btn"
            app:layout_constraintStart_toStartOf="@+id/bottom_delete_btn"
            app:layout_constraintTop_toBottomOf="@+id/bottom_delete_btn" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.motion.widget.MotionLayout>