<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/checkTranitionState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="parent"
            android:alpha="0" />
        <Constraint
            android:id="@+id/flow_button"
            android:translationZ="5dp"
            android:elevation="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp" />
        <Constraint
            android:id="@+id/flow_doc_add_btn"
            app:layout_constraintEnd_toEndOf="@id/flow_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="@id/flow_button"
            app:layout_constraintTop_toTopOf="@id/flow_button"
            app:layout_constraintStart_toStartOf="@id/flow_button"
            android:alpha="1" />
        <Constraint
            android:id="@+id/flow_add_image_btn"
            app:layout_constraintEnd_toEndOf="@id/flow_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="@id/flow_button"
            app:layout_constraintTop_toTopOf="@id/flow_button"
            app:layout_constraintStart_toStartOf="@id/flow_button"
            android:alpha="1" />
        <Constraint
            android:id="@+id/flow_add_card_btn"
            app:layout_constraintEnd_toEndOf="@id/flow_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="@id/flow_button"
            app:layout_constraintTop_toTopOf="@id/flow_button"
            app:layout_constraintStart_toStartOf="@id/flow_button"
            android:alpha="1" />
        <Constraint
            android:id="@+id/flow_add_folder_btn"
            app:layout_constraintEnd_toEndOf="@id/flow_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="@id/flow_button"
            app:layout_constraintTop_toTopOf="@id/flow_button"
            app:layout_constraintStart_toStartOf="@id/flow_button"
            android:alpha="1" />
        app:layout_constraintBottom_toBottomOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/flow_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:rotation="-45"
            android:translationZ="5dp"
            android:elevation="7dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp" />
        <Constraint
            android:id="@+id/flow_doc_add_btn"
            app:layout_constraintEnd_toEndOf="@id/flow_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="@id/flow_button"
            app:layout_constraintStart_toStartOf="@id/flow_button"
            android:translationY="-221dp" />
        <Constraint
            android:id="@+id/flow_add_folder_btn"
            app:layout_constraintEnd_toEndOf="@id/flow_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="@id/flow_button"
            app:layout_constraintTop_toTopOf="@id/flow_button"
            app:layout_constraintStart_toStartOf="@id/flow_button"
            android:translationY="-60dp" />
        <Constraint
            android:id="@+id/flow_add_card_btn"
            app:layout_constraintEnd_toEndOf="@id/flow_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="@id/flow_button"
            app:layout_constraintTop_toTopOf="@id/flow_button"
            app:layout_constraintStart_toStartOf="@id/flow_button"
            android:translationY="-112dp" />
        <Constraint
            android:id="@+id/flow_add_image_btn"
            app:layout_constraintEnd_toEndOf="@id/flow_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="@id/flow_button"
            app:layout_constraintTop_toTopOf="@id/flow_button"
            app:layout_constraintStart_toStartOf="@id/flow_button"
            android:translationY="-164dp" />
        <Constraint
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:alpha="0.5"
            app:layout_constraintBottom_toTopOf="@id/bottom_panel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_panel" />

        <Constraint
            android:id="@+id/checkTranitionState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="parent"
            android:alpha="1" />
        <Constraint
            android:id="@+id/document_txt"
            app:layout_constraintEnd_toStartOf="@id/flow_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/flow_button"
            android:alpha="1"
            android:translationY="-216dp"
            app:layout_constraintTop_toTopOf="@id/flow_button" />
        <Constraint
            android:id="@+id/card_txt"
            app:layout_constraintEnd_toStartOf="@id/flow_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/flow_button"
            android:alpha="1"
            android:translationY="-112dp"
            app:layout_constraintTop_toTopOf="@id/flow_button" />
        <Constraint
            android:id="@+id/folder_txt"
            app:layout_constraintEnd_toStartOf="@id/flow_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/flow_button"
            android:alpha="1"
            android:translationY="-60dp"
            app:layout_constraintTop_toTopOf="@id/flow_button" />
        <Constraint
            android:id="@+id/image_txt"
            app:layout_constraintEnd_toStartOf="@id/flow_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/flow_button"
            android:alpha="1"
            android:translationY="-164dp"
            app:layout_constraintTop_toTopOf="@id/flow_button" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end2">
        <Constraint
            android:id="@+id/flow_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:translationZ="20dp"
            android:elevation="7dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp" />
        <Constraint
            android:id="@+id/sort_menu"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/top_panel" />
        <Constraint
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:paddingTop="60dp"
            android:layout_height="0dp"
            android:alpha="0.5"
            app:layout_constraintBottom_toTopOf="@id/bottom_panel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_panel" />
        <Constraint
            android:id="@+id/checkTranitionState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="parent"
            android:alpha="1" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/endSelect" >
        <Constraint
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/top_select_panel" />
        <Constraint
            android:id="@+id/bottom_panel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:id="@+id/flow_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:alpha="0"
            android:translationZ="5dp"
            android:elevation="7dp" />
        <Constraint
            android:id="@+id/flow_doc_add_btn"
            app:layout_constraintEnd_toEndOf="@id/flow_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="@id/flow_button"
            app:layout_constraintTop_toTopOf="@id/flow_button"
            app:layout_constraintStart_toStartOf="@id/flow_button"
            android:alpha="0" />
        <Constraint
            android:id="@+id/flow_add_image_btn"
            app:layout_constraintEnd_toEndOf="@id/flow_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="@id/flow_button"
            app:layout_constraintTop_toTopOf="@id/flow_button"
            app:layout_constraintStart_toStartOf="@id/flow_button"
            android:alpha="0"  />
        <Constraint
            android:id="@+id/flow_add_card_btn"
            app:layout_constraintEnd_toEndOf="@id/flow_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="@id/flow_button"
            app:layout_constraintTop_toTopOf="@id/flow_button"
            app:layout_constraintStart_toStartOf="@id/flow_button"
            android:alpha="0"  />
        <Constraint
            android:id="@+id/flow_add_folder_btn"
            app:layout_constraintEnd_toEndOf="@id/flow_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="@id/flow_button"
            app:layout_constraintTop_toTopOf="@id/flow_button"
            app:layout_constraintStart_toStartOf="@id/flow_button"
            android:alpha="0"  />
        <Constraint
            android:id="@+id/top_panel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:alpha="0"  />
        <Constraint
            android:layout_height="0dp"
            android:layout_width="fill_parent"
            android:paddingTop="60dp"
            android:id="@+id/container"
            app:layout_constraintBottom_toTopOf="@id/bottom_panel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_panel" />
    </ConstraintSet>

    <Transition
        android:id="@+id/trans1"
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="350">
        <KeyFrameSet >
            <KeyAttribute
                app:motionTarget="@+id/folder_txt"
                app:framePosition="60"
                android:alpha="0" />
            <KeyAttribute
                app:motionTarget="@+id/card_txt"
                app:framePosition="70"
                android:alpha="0" />
            <KeyAttribute
                app:motionTarget="@+id/image_txt"
                app:framePosition="80"
                android:alpha="0" />
            <KeyAttribute
                app:motionTarget="@+id/document_txt"
                app:framePosition="90"
                android:alpha="0" />
        </KeyFrameSet>
    </Transition>
    <Transition
        android:id="@+id/trans2"
        app:constraintSetStart="@+id/end"
        app:constraintSetEnd="@+id/start" >
    </Transition>
    <Transition
        android:id="@+id/trans3"
        app:constraintSetEnd="@id/end2"
        app:constraintSetStart="@+id/start"
        app:autoTransition="none"
        app:duration="200">
    </Transition>
    <Transition
        android:id="@+id/trans4"
        app:constraintSetStart="@+id/end2"
        app:constraintSetEnd="@+id/start"
        app:autoTransition="none"
        app:duration="350">
    </Transition>
    <Transition
        app:constraintSetStart="@+id/start"
        app:constraintSetEnd="@+id/endSelect"
        android:id="@+id/transGoSelect" >
        <KeyFrameSet >
            <KeyAttribute
                app:motionTarget="@+id/flow_add_image_btn"
                app:framePosition="1"
                android:alpha="0" />
            <KeyAttribute
                app:motionTarget="@+id/flow_doc_add_btn"
                app:framePosition="1"
                android:alpha="0" />
            <KeyAttribute
                app:motionTarget="@+id/flow_add_card_btn"
                app:framePosition="1"
                android:alpha="0" />
            <KeyAttribute
                app:motionTarget="@+id/flow_add_folder_btn"
                app:framePosition="1"
                android:alpha="0" />
        </KeyFrameSet>
    </Transition>
</MotionScene>
